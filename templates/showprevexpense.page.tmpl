<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
        <style>
            #currentDateTime {
                font-size: 1.5rem;
                font-weight: bold;
                color: #ffffff;
            }

            .navbar {
                background-color: #3273dc;
                /* Blue color */
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .navbar-item {
                color: #ffffff;
                /* White color for better visibility */
            }

            .title-color {
                color: #ffffff;
                /* White color for better visibility */
            }

            /* Center the date and time */
            .centered {
                flex: 1;
                /* Occupy remaining space */
                display: flex;
                justify-content: center;
                align-items: center;
            }
        </style>
        <title>History</title>

    </head>

<body>
        <nav class="navbar is-danger" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="#">
                    <!-- <h1 class="title is-5 title-color">
                    Expense Manager
                </h1> -->
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                    data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item">
                        Home
                    </a>

                    <a class="navbar-item" href="/more">
                        More
                    </a>
                </div>

                <!-- Centered date and time -->
                <p class="has-text-centered centered" id="currentDateTime"></p>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="buttons">
                            <a class="button is-primary" href="/user/signup">
                                <strong>Logout</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

    <section class="section">
        <div class="container">
            <div class="has-text-centered">
                <p class="title is-size-4">Hello {{.name}}.</p>
                <p class="title is-size-6">This is your total expense on {{.category}} for {{.month}}</p>
            </div>
            <br>
            

            <table class="table is-bordered is-striped is-fullwidth is-hoverable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Expense</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .expense}}
                    <tr>
                        <td>{{.Date.Format "2006-01-02"}}</td>
                        <td>{{.Expense}}</td>
                    </tr>
                    {{end}}
                    
                </tbody>
            </table>
            <div class="buttons is-justify-content-space-between">
                <a class="button is-primary" href="/expense">Back</a>
                <a class="button is-info" href="#">Print</a>
            </div>

        </div>
    </section>
        <script>
            function updateDateTime() {
                const currentDateTime = new Date();
                const formattedDateTime = currentDateTime.toLocaleString();
                document.getElementById('currentDateTime').textContent = `${formattedDateTime}`;
            }
            updateDateTime();
            setInterval(updateDateTime, 1000);
        </script>

</body>

</html>
