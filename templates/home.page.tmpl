{{template "base" .}}
{{define "title"}}Expense{{end}}
{{define "content"}}
<section class="section">
        <section class="section">
            <div class="container">
                <table class="table is-fullwidth is-hoverable">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Expense</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    {{ range .category}}
                    <tbody>
                        <tr>
                            <td>{{.}}</td>
                            <td>0</td>
                            <td>
                                <button class="button is-primary is-small">Add</button>
                            </td>
                        </tr>
                    </tbody>
                    {{end}}
                </table>
            </div>
        </section>
</section>
{{end}}

